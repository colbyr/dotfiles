[user]
  name = Colby Rabideau
  email = idontknow5691@gmail.com
[core]
  excludesfile = ~/.gitignore_global
  include = ~/.git_profile
[color]
  ui = auto
[alias]
  aa = add --all
  amend = !git commit --amend -m "$(git --no-pager log -1 --pretty=%s)"
  b = branch
  bo = checkout -b
  ci = commit
  co = checkout
  df = !git --no-pager diff --name-only
  di = diff
  dh = diff HEAD
  dm = diff master
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  rbm = rebase master
  rpull = pull -r
  rs = !git --no-pager diff --name-only $1 | xargs -o vim -O
  st = status -s
[push]
  default = current
