[user]
  name = Colby Rabideau
  email = idontknow5691@gmail.com

[core]
  excludesfile = ~/.gitignore_global

[color]
  ui = auto

[alias]
  aa = !git add --all && git status
  amend = !git commit --amend -m "$(git --no-pager log -1 --pretty=%s)"
  b = branch
  bo = checkout -b
  ci = commit
  co = checkout
  coffeelint = !git --no-pager diff --name-only --diff-filter=MA origin/master | grep '.coffee' | xargs coffeelint -f ~/dotfiles/linters/coffeelint.json
  df = !git --no-pager diff --name-only
  di = diff
  dh = diff HEAD
  dm = diff master
  g = !git --no-pager grep
  gf = !git --no-pager grep -l
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  rbm = rebase master
  rpull = pull -r
  rs = !git --no-pager diff --name-only $1 | xargs -o vim -O
  st = status -s
  update = !git stash && git pull --rebase origin master && git stash pop

[push]
  default = current

[include]
  path = ~/.git_profile
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[hub]
	host = git.hubteam.com
