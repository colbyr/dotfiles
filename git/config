[include]
  path = ~/.git_profile

[user]
  name = Colby Rabideau
  email = crabideau@hubspot.com

[core]
  excludesfile = ~/.gitignore_global
	hooksPath = /Users/crabideau/.git_hooks

[color]
  ui = auto

[alias]
  aa = !git add --all && git status
  amend = !git commit --amend -m "$(git --no-pager log -1 --pretty=%s)"
  b = branch
  bo = checkout -b
  ci = commit
  co = checkout
  df = !git --no-pager diff --name-only
  di = diff
  dh = diff HEAD
  dm = diff master
  g = !git --no-pager grep
  gf = !git --no-pager grep -l
  lg = log --graph --oneline --decorate --all
  rbm = rebase master
  rpull = pull -r
  rs = !git --no-pager diff --name-only $1 | xargs -o nvim -O
  sl = !git --no-pager log --graph --branches --decorate --oneline --boundary --author='Colby Rabideau' --topo-order --first-parent --simplify-by-decoration --pretty=format:%D%n
  st = status -s
  update = !git stash && git pull --rebase origin master && git stash pop

[push]
  default = current

[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[hub]
  host = git.hubteam.com
